<Window x:Class="Yazlab1.Views.ParsingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        mc:Ignorable="d"
        Title="Excel Veri Yönetimi" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BusyAwareButtonStyle" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BusyIndicatorVisibilityStyle" TargetType="ProgressBar">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Lütfen Yapmak İstediğiniz İşlemi Seçin" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" TextWrapping="Wrap"/>

            <GroupBox Header="Veri Yükleme (Mevcut verileri siler ve yenilerini ekler)" FontWeight="SemiBold">
                <StackPanel>
                    <Button Content="Excel Ders Listesi Yükle" 
                            Height="40" Margin="5"
                            Command="{Binding UploadDerslerExcelCommand}"
                            Style="{StaticResource BusyAwareButtonStyle}"/>

                    <Button Content="Excel Öğrenci Listesi Yükle" 
                            Height="40" Margin="5"
                            Command="{Binding UploadOgrencilerExcelCommand}"
                            Style="{StaticResource BusyAwareButtonStyle}"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="DarkBlue" FontWeight="SemiBold"
                       Margin="0,15,0,5" TextAlignment="Center" TextWrapping="Wrap" MinHeight="30"/>

            <ProgressBar Style="{StaticResource BusyIndicatorVisibilityStyle}"
                         IsIndeterminate="True" Height="15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Tüm Dersleri Sil" 
                        Width="120" Margin="5"
                        Background="DarkRed" Foreground="White"
                        Command="{Binding TumDersleriSilCommand}"
                        Style="{StaticResource BusyAwareButtonStyle}"/>
                <Button Content="Tüm Öğrencileri Sil" 
                        Width="130" Margin="5"
                        Background="DarkRed" Foreground="White"
                        Command="{Binding TumOgrencileriSilCommand}"
                        Style="{StaticResource BusyAwareButtonStyle}"/>
            </StackPanel>

            <Button Content="Geri Dön" 
                    Margin="0,15,0,0" Width="100"
                    IsCancel="True" Click="GeriButton_Click"/>

        </StackPanel>
    </Grid>
</Window>