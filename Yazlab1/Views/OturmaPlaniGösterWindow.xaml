<Window x:Class="Yazlab1.Views.OturmaPlaniGosterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        xmlns:vm="clr-namespace:Yazlab1.ViewModel"
        xmlns:models="clr-namespace:Yazlab1.Model"
        mc:Ignorable="d"
        Title="{Binding PencereBasligi}"
        Height="900" Width="1300"
        Background="#f8faff"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
   
        <BitmapImage x:Key="DoluKoltukResim" UriSource="/images/dolu_koltuk.png"/>
        <BitmapImage x:Key="BosKoltukResim" UriSource="/images/bos_koltuk.png"/>

    
        <Style x:Key="BuyukKoltukStyle" TargetType="Border">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="Background" Value="#ffffff"/>
        </Style>

       
        <DataTemplate x:Key="KoltukTemplate">
            <Border Style="{StaticResource BuyukKoltukStyle}" ToolTip="{Binding ToolTipText}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#4CAF50" 
                            CornerRadius="3"
                            Padding="2,1"
                            Margin="2"
                            HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PozisyonText}"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                
                    <Image Grid.Row="1" 
                           Source="{Binding KoltukResim}" 
                           Width="40" 
                           Height="40"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,5,0,0"/>

                 
                    <StackPanel Grid.Row="2" 
                                Orientation="Vertical" 
                                Margin="3"
                                VerticalAlignment="Bottom">

                        <TextBlock Text="{Binding OgrenciAdSoyad}"
                                   FontSize="9"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxHeight="30"
                                   TextTrimming="CharacterEllipsis"/>

                     
                        <TextBlock Text="{Binding OgrenciNo}"
                                   FontSize="8"
                                   Foreground="#666666"
                                   TextAlignment="Center"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

      
        <Border Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                BorderBrush="#d9e1f2"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎓 Derslik Seçin:"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="#2b4c7e"
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding DerslikListesi}"
                              SelectedItem="{Binding SecilenDerslik, Mode=TwoWay}"
                              DisplayMemberPath="DerslikAdi"
                              Width="250"
                              Margin="0,0,20,0"
                              FontSize="13"
                              Background="#eef4ff"
                              BorderBrush="#cdd7f2"
                              BorderThickness="1"/>
                </StackPanel>

                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="🏫 Sınıf Düzeni:"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="#2b4c7e"
                               FontSize="12"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding SinifDuzeniText}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#555"/>
                </StackPanel>

               
                <Button Grid.Column="2"
                        Command="{Binding PdfIndir}"
                        Content="📄 PDF İndir"
                        Padding="15,8"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#cccccc"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                BorderBrush="#e0e6f5"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding SecilenDerslik.DerslikAdi, StringFormat='{}🗓️ {0} - Gerçek Oturma Planı'}"
                           FontWeight="Bold"
                           Foreground="#2b4c7e"
                           FontSize="16"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center"/>

               
               
                <ScrollViewer Grid.Row="1" 
              HorizontalScrollBarVisibility="Auto" 
              VerticalScrollBarVisibility="Auto"
              Padding="10">
                    <ItemsControl ItemsSource="{Binding SinifSatirlari}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                               
                                <Border Background="#f8f9fa" CornerRadius="4" Padding="5" Margin="0,2,0,2">
                                    <StackPanel Orientation="Horizontal">
                                     
                                        <TextBlock Text="{Binding SatirNumarasi, StringFormat='Satır {0}'}" 
                                   FontWeight="Bold" FontSize="11" Foreground="#2b4c7e"
                                   Width="60" VerticalAlignment="Center"/>

                                       
                                        <ItemsControl ItemsSource="{Binding SirayaGoreKoltuklar}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                   
                                                    <StackPanel Orientation="Vertical" Margin="5,0,5,0">
                                                      
                                                        <TextBlock Text="{Binding [0].Sira, StringFormat='S{0}'}" 
                                                   FontSize="9" Foreground="#666" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>

                                                     
                                                        <ItemsControl ItemsSource="{Binding}" 
                                                      ItemTemplate="{StaticResource KoltukTemplate}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

               
                <Border Grid.Row="2"
                        Background="#f8f9fa"
                        CornerRadius="6"
                        Padding="10"
                        Margin="0,10,0,0"
                        BorderBrush="#e9ecef"
                        BorderThickness="1"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="80" Height="70" Margin="5" CornerRadius="6" BorderThickness="1" Background="#ffffff" BorderBrush="#2196f3">
                            <Grid>
                                <Image Source="{StaticResource DoluKoltukResim}" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="Ahmet Yılmaz" FontSize="7" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center" Margin="3" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="Dolu koltuk" FontSize="11" Margin="8,0,15,0" VerticalAlignment="Center"/>
                        <Border Width="80" Height="70" Margin="5" CornerRadius="6" BorderThickness="1" Background="#ffffff" BorderBrush="#cccccc">
                            <Grid>
                                <Image Source="{StaticResource BosKoltukResim}" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="Boş" FontSize="9" TextAlignment="Center" Margin="3" VerticalAlignment="Bottom" Foreground="#666"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="Boş koltuk" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>