<Window x:Class="Yazlab1.Views.OturmaPlaniGosterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        xmlns:vm="clr-namespace:Yazlab1.ViewModel"
        xmlns:models="clr-namespace:Yazlab1.Model"
        mc:Ignorable="d"
        Title="{Binding PencereBasligi}"
        Height="700" Width="1000"
        Background="#f8faff"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Üst Panel -->
        <Border Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                BorderBrush="#d9e1f2"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎓 Derslik Seçin:"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="#2b4c7e"
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding DerslikListesi}"
                              SelectedItem="{Binding SecilenDerslik, Mode=TwoWay}"
                              DisplayMemberPath="DerslikAdi"
                              Width="250"
                              Margin="0,0,5,0"
                              FontSize="13"
                              Background="#eef4ff"
                              BorderBrush="#cdd7f2"
                              BorderThickness="1"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding PdfIndir}"
                        Content="📄 PDF İndir"
                        Padding="15,8"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#cccccc"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Oturma Planı Alanı -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10"
                BorderBrush="#e0e6f5"
                BorderThickness="1">
            <GroupBox Header="{Binding SecilenDerslik.DerslikAdi, StringFormat='{}Oturma Planı: {0}'}"
                      FontWeight="Bold"
                      Foreground="#2b4c7e"
                      FontSize="14"
                      BorderThickness="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding GorselOturmaPlani}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding SecilenDerslik.EnineSiraSayisi}"
                                             Rows="{Binding SecilenDerslik.BoyunaSiraSayisi}"
                                             Margin="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:OturmaPlaniOgrenciDetay}">
                                <Border BorderBrush="#c5d2e0"
                                        BorderThickness="1"
                                        Margin="4"
                                        MinHeight="75"
                                        MinWidth="100"
                                        Background="#f5f8ff"
                                        CornerRadius="6">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e3edff"/>
                                                    <Setter Property="BorderBrush" Value="#5078d3"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding DisplayText}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="11"
                                               Foreground="#2b2b2b"
                                               FontWeight="SemiBold"
                                               Padding="5"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Border>
    </Grid>
</Window>