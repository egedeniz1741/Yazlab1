<Window x:Class="Yazlab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Taraf - Yeni Kullanıcı Ekle -->
        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Yeni Kullanıcı Ekle" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="#2C3E50" Margin="0,0,0,30"/>

                <!-- E-posta -->
                <TextBlock Text="E-posta" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="40" FontSize="14" 
                        Padding="10,0" Margin="0,0,0,20"
                        BorderBrush="#BDBDBD" BorderThickness="1">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Şifre -->
                <TextBlock Text="Şifre" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="40" FontSize="14" 
                            Padding="10,0" Margin="0,0,0,20"
                            BorderBrush="#BDBDBD" BorderThickness="1">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <!-- Ad Soyad -->
                <TextBlock Text="Ad Soyad" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAdSoyad" Height="40" FontSize="14" 
                        Padding="10,0" Margin="0,0,0,20"
                        BorderBrush="#BDBDBD" BorderThickness="1">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Bölüm -->
                <TextBlock Text="Bölüm" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbBolum" Height="40" FontSize="14" 
                         Padding="10,0" Margin="0,0,0,30"
                         BorderBrush="#BDBDBD" BorderThickness="1">
                    <ComboBoxItem Content="Bilgisayar Mühendisliği"/>
                    <ComboBoxItem Content="Elektrik Mühendisliği"/>
                    <ComboBoxItem Content="Yazılım Mühendisliği"/>
                    <ComboBoxItem Content="Elektrik Elektronik Mühendisliği"/>
                    <ComboBoxItem Content="İnşaat Mühendisliği"/>
                </ComboBox>

                <!-- Kaydet Butonu -->
                <Button Content="Kullanıcı Ekle" Height="45" FontSize="16" 
                       FontWeight="Bold" Background="#3498DB" Foreground="White"
                       BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Sağ Taraf - Bölüm Butonları -->
        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Bölümler" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="#2C3E50" Margin="0,0,0,25"
                          HorizontalAlignment="Center"/>

                <!-- Bilgisayar Mühendisliği -->
                <Button x:Name="btnBilgisayar" Content="💻 Bilgisayar Mühendisliği" 
                       Height="70" FontSize="14" FontWeight="SemiBold"
                       Background="#E74C3C" Foreground="White"
                       BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                       Command="{Binding BilgisayarEkraninaGitCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Elektrik Mühendisliği -->
                <Button x:Name="btnElektrik" Content="⚡ Elektrik Mühendisliği" 
                       Height="70" FontSize="14" FontWeight="SemiBold"
                       Background="#F39C12" Foreground="White"
                       BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                       Command="{Binding DigerBolumlerCommand}"
                       CommandParameter="Elektrik Mühendisliği">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Yazılım Mühendisliği -->
                <Button x:Name="btnYazilim" Content="📱 Yazılım Mühendisliği" 
                       Height="70" FontSize="14" FontWeight="SemiBold"
                       Background="#3498DB" Foreground="White"
                       BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                       Command="{Binding DigerBolumlerCommand}"
                       CommandParameter="Yazılım Mühendisliği">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Elektrik Elektronik Mühendisliği -->
                <Button x:Name="btnElektrikElektronik" Content="🔌 Elektrik Elektronik Müh." 
                       Height="70" FontSize="14" FontWeight="SemiBold"
                       Background="#9B59B6" Foreground="White"
                       BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                       Command="{Binding DigerBolumlerCommand}"
                       CommandParameter="Elektrik Elektronik Mühendisliği">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- İnşaat Mühendisliği -->
                <Button x:Name="btnInsaat" Content="🏗️ İnşaat Mühendisliği" 
                       Height="70" FontSize="14" FontWeight="SemiBold"
                       Background="#16A085" Foreground="White"
                       BorderThickness="0" Cursor="Hand"
                       Command="{Binding DigerBolumlerCommand}"
                       CommandParameter="İnşaat Mühendisliği">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
