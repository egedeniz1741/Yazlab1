<Window x:Class="Yazlab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1"
        mc:Ignorable="d"
        Title="Admin Paneli" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="20" Background="#F4F7FC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="25"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Yeni Kullanıcı Ekle" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,30"/>

                <TextBlock Text="E-posta" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="40" FontSize="14" 
                         Padding="10,0" Margin="0,0,0,20"
                         BorderBrush="#BDBDBD" BorderThickness="1"
                         Text="{Binding NewUserEmail, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Şifre" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="40" FontSize="14" 
                             Padding="10,0" Margin="0,0,0,20"
                             BorderBrush="#BDBDBD" BorderThickness="1">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <TextBlock Text="Ad Soyad" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAdSoyad" Height="40" FontSize="14" 
                         Padding="10,0" Margin="0,0,0,20"
                         BorderBrush="#BDBDBD" BorderThickness="1"
                         Text="{Binding NewUserAdSoyad, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="Bölüm" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbBolum" Height="40" FontSize="14" 
                          Padding="10,0" Margin="0,0,0,30"
                          BorderBrush="#BDBDBD" BorderThickness="1"
                          ItemsSource="{Binding BolumlerListesi}"
                          SelectedItem="{Binding SelectedBolum}"
                          DisplayMemberPath="BolumAdi"/>
                <Button x:Name="btnKullaniciEkle" Content="Kullanıcı Ekle" Height="45" FontSize="16" 
                        FontWeight="Bold" Background="#3498DB" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnKullaniciEkle_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Bölümler" FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,25"
                           HorizontalAlignment="Center"/>

                <Button x:Name="btnBilgisayar" Content="💻 Bilgisayar Mühendisliği" 
                        Height="70" FontSize="14" FontWeight="SemiBold"
                        Background="#E74C3C" Foreground="White"
                        BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                        Tag="Bilgisayar Mühendisliği" Click="BtnBolumeGit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnElektrik" Content="⚡ Elektrik Mühendisliği" 
                        Height="70" FontSize="14" FontWeight="SemiBold"
                        Background="#F39C12" Foreground="White"
                        BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                        Tag="Elektrik Mühendisliği" Click="BtnBolumeGit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnYazilim" Content="📱 Yazılım Mühendisliği" 
                        Height="70" FontSize="14" FontWeight="SemiBold"
                        Background="#3498DB" Foreground="White"
                        BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                        Tag="Yazılım Mühendisliği" Click="BtnBolumeGit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnElektrikElektronik" Content="🔌 Elektrik Elektronik Müh." 
                        Height="70" FontSize="14" FontWeight="SemiBold"
                        Background="#9B59B6" Foreground="White"
                        BorderThickness="0" Margin="0,0,0,15" Cursor="Hand"
                        Tag="Elektronik Mühendisliği" Click="BtnBolumeGit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnInsaat" Content="🏗️ İnşaat Mühendisliği" 
                        Height="70" FontSize="14" FontWeight="SemiBold"
                        Background="#16A085" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Tag="İnşaat Mühendisliği" Click="BtnBolumeGit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>