<Window x:Class="Yazlab1.Views.OturmaPlaniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        xmlns:vm="clr-namespace:Yazlab1.ViewModel" 
        xmlns:models="clr-namespace:Yazlab1.Model"
        mc:Ignorable="d"
        Title="Sınav Oturma Planı" Height="600" Width="1000" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" ItemsSource="{Binding YerlesimPlani}">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Key.DerslikAdi}" FontWeight="Bold"/>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Value}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding Key.EnineSiraSayisi}" 
                                                 Rows="{Binding Key.BoyunaSiraSayisi}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="2" MinHeight="50" Background="#FFF0F8FF">
                                        <TextBlock Text="{Binding DisplayText}" 
                                                   TextWrapping="Wrap" 
                                                   TextAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   FontSize="10"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <Button Grid.Row="1" 
                Content="Oturma Planını Excel'e Aktar" 
                Command="{Binding ExcelAktarCommand}" 
                Height="35" FontWeight="Bold" Background="DarkGreen" Foreground="White" Margin="0,15,0,0"/>

    </Grid>
</Window>