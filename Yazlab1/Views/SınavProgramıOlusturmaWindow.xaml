<Window x:Class="Yazlab1.Views.SinavProgramiOlusturmaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        xmlns:vm="clr-namespace:Yazlab1.ViewModel"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Sınav Programı Oluşturma" Height="863" Width="1134" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BusyAwareButtonStyle" TargetType="Button">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BusyIndicatorVisibilityStyle" TargetType="ProgressBar">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,15,0">
            <TextBlock Text="Sınav Kısıtları" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <GroupBox Header="Sınav Tarih Aralığı" Margin="0,5">
                <StackPanel Margin="5">
                    <TextBlock Text="Başlangıç Tarihi:"/>
                    <DatePicker SelectedDate="{Binding SinavBaslangicTarihi}" Margin="0,5,0,10"/>
                    <TextBlock Text="Bitiş Tarihi:"/>
                    <DatePicker SelectedDate="{Binding SinavBitisTarihi}" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Sınav Ayarları" Margin="0,10">
                <StackPanel Margin="5">
                    <TextBlock Text="Sınav Türü:"/>
                    <ComboBox SelectedItem="{Binding SinavTuru}" Margin="0,5,0,10">
                        <System:String>Vize</System:String>
                        <System:String>Final</System:String>
                        <System:String>Bütünleme</System:String>
                    </ComboBox>
                    <TextBlock Text="Sınav Başlangıç Saati (Örn: 9):"/>
                    <TextBox Text="{Binding SinavBaslangicSaati}" Margin="0,5,0,10"/>
                    <TextBlock Text="Sınav Bitiş Saati (Örn: 17):"/>
                    <TextBox Text="{Binding SinavBitisSaati}" Margin="0,5,0,10"/>
                    <TextBlock Text="Varsayılan Sınav Süresi (dk):"/>
                    <TextBox Text="{Binding VarsayilanSinavSuresi}" Margin="0,5,0,10"/>
                    <TextBlock Text="Sınav Arası Bekleme Süresi (dk):"/>
                    <TextBox Text="{Binding VarsayilanBeklemeSuresi}" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Sınav Yapılacak Günler" Margin="0,10">
                <StackPanel Margin="5">
                    <CheckBox Content="Pazartesi" IsChecked="{Binding Gunler[0]}" Margin="2"/>
                    <CheckBox Content="Salı" IsChecked="{Binding Gunler[1]}" Margin="2"/>
                    <CheckBox Content="Çarşamba" IsChecked="{Binding Gunler[2]}" Margin="2"/>
                    <CheckBox Content="Perşembe" IsChecked="{Binding Gunler[3]}" Margin="2"/>
                    <CheckBox Content="Cuma" IsChecked="{Binding Gunler[4]}" Margin="2"/>
                    <CheckBox Content="Cumartesi" IsChecked="{Binding Gunler[5]}" Margin="2"/>
                    <CheckBox Content="Pazar" IsChecked="{Binding Gunler[6]}" Margin="2"/>
                </StackPanel>
            </GroupBox>

            <Button Content="Programı Oluştur"
                    Command="{Binding ProgramiOlusturCommand}"
                    Style="{StaticResource BusyAwareButtonStyle}"
                    Height="40" FontWeight="Bold" Background="DarkGreen" Foreground="White" Margin="0,20,0,0"/>

            <Button Content="Oturma Planlaması"
                    Command="{Binding OturmaPlanlamasinaGitCommand}"
                    IsEnabled="{Binding IsTakvimOlusturuldu}"
                    Height="40" FontWeight="Bold" Background="#007ACC" Foreground="White" Margin="0,10,0,0"/>

            <ProgressBar Style="{StaticResource BusyIndicatorVisibilityStyle}"
                         IsIndeterminate="True" Height="5" Margin="0,5,0,0"/>
        </StackPanel>

        <GroupBox Grid.Column="1" Header="Sınava Dahil Edilecek Dersler" FontSize="14" FontWeight="Bold">
            <DataGrid ItemsSource="{Binding DahilEdilecekDersler}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Seç" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type vm:DersSecici}">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Ders Kodu" Binding="{Binding Ders.DersKodu}" IsReadOnly="True" Width="Auto"/>
                    <DataGridTextColumn Header="Ders Adı" Binding="{Binding Ders.DersAdi}" IsReadOnly="True" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>