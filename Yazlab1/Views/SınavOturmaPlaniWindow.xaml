<Window x:Class="Yazlab1.Views.SinavOturmaPlaniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        xmlns:vm="clr-namespace:Yazlab1.ViewModel"
        xmlns:models="clr-namespace:Yazlab1.Model"
        mc:Ignorable="d"
        Title="Oluşturulan Sınavlar" Height="500" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="450"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Oluşturulan Sınavlar" Margin="0,0,10,0" FontWeight="Bold">
            <DataGrid ItemsSource="{Binding SinavListesi}"
                      SelectedItem="{Binding SecilenSinav, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserResizeColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ders" Binding="{Binding SinavDetay.Ders.DersAdi}" Width="*"/>
                    <DataGridTextColumn Header="Tarih" Binding="{Binding Tarih, StringFormat='dd.MM.yyyy'}" Width="Auto"/>
                    <DataGridTextColumn Header="Saat" Binding="{Binding BaslangicSaati, StringFormat='hh\\:mm'}" Width="Auto"/>
                    <DataGridTextColumn Header="Derslikler" Binding="{Binding DerslikKodlariString}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Button Grid.Column="1" 
                Content="Oturma Planına Geç" 
                Command="{Binding OturmaPlaninaGecCommand}" 
                Height="40" FontWeight="Bold" Background="#007ACC" Foreground="White" 
                VerticalAlignment="Center" Padding="20,0"/>
    </Grid>
</Window>