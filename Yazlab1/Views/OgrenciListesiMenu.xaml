<Window x:Class="Yazlab1.Views.OgrenciListesiMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yazlab1.Views"
        mc:Ignorable="d"
        Title="Öğrenci ve Ders Bilgileri" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Öğrenci Numarası Girin veya Seçin:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding OgrenciNumaralari}"
                          SelectedItem="{Binding SecilenOgrenciNumarasi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Text="{Binding SecilenOgrenciNumarasi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          FontSize="14"
                          Height="35"
                          IsEditable="True"
                          Margin="0,0,10,0"/>

                <Button Grid.Column="1"
                        Content="Getir" 
                        Command="{Binding OgrenciBilgileriniGetirCommand}"
                        Width="100" 
                        Height="35"
                        FontSize="14"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Öğrenci Bilgisi" FontSize="14" FontWeight="Bold" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding OgrenciBilgi}" 
                               Margin="10" 
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Aldığı Dersler" FontSize="14" FontWeight="Bold">
                <ListBox ItemsSource="{Binding Dersler}" 
                         FontSize="13"
                         Margin="5"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding DersAdi}"/>
                                    <TextBlock Foreground="Gray" FontSize="12" Margin="0,3,0,0">
                                        <Run Text="Kod: "/>
                                        <Run Text="{Binding DersKodu}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                    <TextBlock Foreground="DarkBlue" FontSize="12" Margin="0,3,0,0">
                                        <Run Text="Yapı: "/>
                                        <Run Text="{Binding DersYapisi}"/>
                                    </TextBlock>
                                    <TextBlock Foreground="DarkGreen" FontSize="12" Margin="0,3,0,0">
                                        <Run Text="Sınıf: "/>
                                        <Run Text="{Binding Sinif}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>
</Window>