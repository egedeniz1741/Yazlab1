<Window x:Class="Yazlab1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş Yap" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Text="E-posta:" Margin="0,0,0,5"/>
            <TextBox Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Şifre:" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,20"/>

            <Button Content="Giriş Yap" Name="LoginButton" Click="LoginButton_Click"/>

            <TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="100" Margin="192,17,0,0" VerticalAlignment="Top" Width="100" Source="/Views/Screenshot_36.png"/>
    </Grid>
</Window>