<Window x:Class="Yazlab1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş Yap" Height="600" Width="500" WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Border CornerRadius="15" BorderBrush="#ddd" BorderThickness="1" Padding="20" Background="White" Margin="20" >
        <Grid Margin="0,68,0,-68">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Üstte Logo -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,20">
                <TextBlock Text="Sisteme Giriş" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,10,0,0" />
            </StackPanel>

            <!-- Form Alanı -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250">
                <TextBlock Text="E-posta:" Margin="0,0,0,5" Foreground="#555"/>

                <!-- TextBox Border ile sarıldı -->
                <Border CornerRadius="6" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,10">
                    <TextBox Name="EmailTextBox" Height="30" Padding="5" Background="Transparent" BorderThickness="0"/>
                </Border>

                <TextBlock Text="Şifre:" Margin="0,0,0,5" Foreground="#555"/>

                <Border CornerRadius="6" Background="#fafafa" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,20">
                    <PasswordBox Name="PasswordBox" Height="30" Padding="5" Background="Transparent" BorderThickness="0"/>
                </Border>

                <!-- Button: köşe Border içinde, template kullanıldı -->
                <Button Name="LoginButton" Click="LoginButton_Click" Height="35" Background="#3A7AFE" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Content="Giriş Yap">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,2"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Name="ErrorMessageTextBlock" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
            </StackPanel>
            <Image HorizontalAlignment="Left" Height="100" Margin="148,-81,0,0" VerticalAlignment="Top" Width="100" Source="/Views/Screenshot_36.png"/>
        </Grid>
    </Border>
</Window>
